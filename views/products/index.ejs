<%- include('../partials/header') %>

    <h2 class="mb-3">Products</h2>
    <a href="/products/create" class="btn btn-success mb-3">Add Product</a>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Supplier</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(p => { %>
                <tr>
                    <td>
                        <%= p.name %>
                    </td>
                    <td>
                        <%= p.price %>
                    </td>
                    <td>
                        <%= p.quantity %>
                    </td>
                    <td>
                        <%= p.supplier ? p.supplier.name : 'No supplier' %>
                    </td>
                    <td>
                        <a href="/products/edit/<%= p._id %>" class="btn btn-primary btn-sm">Edit</a>
                        <a href="/products/delete/<%= p._id %>" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>

    <%- include('../partials/footer') %>