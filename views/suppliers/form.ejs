<%- include('../partials/header') %>

    <h2>
        <%= supplier._id ? 'Edit Supplier' : 'Add Supplier' %>
    </h2>

    <form method="POST" action="<%= supplier._id ? '/suppliers/edit/' + supplier._id : '/suppliers/add' %>">
        <label>Name</label>
        <input type="text" name="name" value="<%= supplier.name || '' %>" required>
        <label>Address</label>
        <input type="text" name="address" value="<%= supplier.address || '' %>">
        <label>Phone</label>
        <input type="text" name="phone" value="<%= supplier.phone || '' %>">
        <button type="submit">Save</button>
    </form>


    <%- include('../partials/footer') %>